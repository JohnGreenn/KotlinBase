<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/llHomeATHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="@string/home_nav_index"
            android:textColor="@drawable/home_navigation_color_selector"
            android:textSize="@dimen/sp_11"
            app:drawableTopCompat="@drawable/home_home_selector" />


        <TextView
            android:id="@+id/llHomeATCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="@string/home_nav_category"
            android:textColor="@drawable/home_navigation_color_selector"
            android:textSize="@dimen/sp_11"
            app:drawableTopCompat="@drawable/home_found_selector" />

        <TextView
            android:id="@+id/llHomeATObject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="@string/home_nav_cart"
            android:textColor="@drawable/home_navigation_color_selector"
            android:textSize="@dimen/sp_11"
            app:drawableTopCompat="@drawable/home_message_selector" />

        <TextView
            android:id="@+id/llHomeATMy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="@string/home_nav_mine"
            android:textColor="@drawable/home_navigation_color_selector"
            android:textSize="@dimen/sp_11"
            app:drawableTopCompat="@drawable/home_me_selector" />

    </LinearLayout>

</FrameLayout>